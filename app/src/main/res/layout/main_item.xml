<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layoutItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selector_main_item_bg"
        android:padding="@dimen/dip_8">

        <ImageView
            android:id="@+id/imgShow"
            android:layout_width="@dimen/dip_36"
            android:layout_height="@dimen/dip_36"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dip_10"
            android:elevation="@dimen/dip_4"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tvShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imgShow"
            android:elevation="@dimen/dip_2"
            android:textColor="@color/black"
            android:textSize="24sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>